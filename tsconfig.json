{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./lib",
        "declarationMap": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "experimentalDecorators": true,
        "lib": ["dom", "esnext"],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["./src/**/*.stories.tsx", "./node_modules", "./lib"]
}
